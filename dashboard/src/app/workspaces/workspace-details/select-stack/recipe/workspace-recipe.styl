.recipe-widget
  margin-left 10px

  md-radio-button
    outline 0

  .recipe-editor
    min-width 500px
    max-width 1000px
    margin-top 20px

  .recipe-editor .CodeMirror
    border 1px solid $list-separator-color
    height 300px
    min-height 300px

  .recipe-docs-link
    margin-top 5px

  .recipe-url
    width calc(100% - 10px)
    margin-bottom 20px

.recipe-format .che-toggle-button-enabled
  color $primary-color !important

.recipe-format .che-toggle-button
  margin 0px 10px 0px 0px

.recipe-widget .che-label-container-row
  align-items center
